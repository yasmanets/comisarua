<div class="col-8 offset-2 register">
    <h2>Nuevo policía</h2>
    <hr class="rounded">
    <form action="/police/new" method="POST" class="form-container">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Nombre" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="surname">Apellidos</label>
                <input type="text" class="form-control" id="surname" name="surname" placeholder="Apellidos" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="identificationNumber">Identificador</label>
                <input type="text" class="form-control" id="identificationNumber" name="identificationNumber" placeholder="Identificador" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="phone">Teléfono</label>
                <input type="text" class="form-control" id="phone" name="phone" placeholder="Teléfono">
            </div>
            <div class="col-md-12 mb-3">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password"  placeholder="Contraseña" 
                    minlength="8" maxlength="16" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required
                    title="La contraseña debe contener almenos 1 número, 1 mayúscula, 1 minúscula y debe tener entre 8 y 16 caracteres">
            </div>
        </div>

        <div class="d-flex">
            <button class="btn btn-outline-secondary ml-auto">Registrar</button>
        </div>
    </form>
</div>