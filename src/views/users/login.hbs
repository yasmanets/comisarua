<div class="col-6 offset-3 loginForm">
    <form action="/login" method="POST">
        <div class="form-row">
            <div class="col-md-12 mb-3">
                <label for="identificationNumber">Identificador</label>
                <input type="text" class="form-control" id="identificationNumber" name="identification" placeholder="Identificador" required>
            </div>
            <div class="col-md-12 mb-3">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required>
            </div>
        </div>
        <div class="d-flex">
            <button class="btn btn-outline-secondary ml-auto">Iniciar sesión</button>
        </div>
    </form>
</div>